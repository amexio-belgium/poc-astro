---
import type {BannerCards as BannerCardsType, BannerVideo as BannerVideoType, Header as HeaderType, PageTitle as PageTitleType} from 'src/api/procedures/cms/types';
import {Components} from 'src/api/procedures/cms/types'
import Header from 'src/components/Header.astro';
import BannerVideo from 'src/components/BannerVideo.astro';
import PageTitle from 'src/components/PageTitle.astro';
import BannerCards from 'src/components/BannerCards.astro';

interface Props {
    component: (BannerCardsType|HeaderType|BannerVideoType|PageTitleType);
}

const {component} = Astro.props;

---

{component.componentName === Components.Header && <Header header={component}></Header>}
{component.componentName === Components.BannerVideo && <BannerVideo bannerVideo={component}></BannerVideo>}
{component.componentName === Components.PageTitle && <PageTitle pageTitle={component}></PageTitle>}
{component.componentName === Components.BannerCards && <BannerCards bannerCards={component}></BannerCards>}