---
import {BannerVideo} from "../models/components/bannerVideo/bannerVideo.interface";
import {BannerVideoModel} from "../models/components/bannerVideo/bannerVideo.model";
interface Props {
    bannerVideo: BannerVideoModel;
}

const {bannerVideo} = Astro.props;

