import FullWidthBanner from 'src/components/astro/FullWidthBanner.astro';
import Text from 'src/components/astro/Text.astro';
import Banner5050 from 'src/components/astro/Banner5050.astro';

interface Props {
    component: (Banner5050Type|BannerCardsType|BannerTilesType|DefaultHeaderType|HeaderType|BannerVideoType|PageTitleType|FullWidthBannerType|TextType);
}

const {component} = Astro.props;
---

{component.componentName === Components.DefaultHeader && <DefaultHeader defaultHeader={component}></DefaultHeader>}
{component.componentName === Components.Banner5050 && <Banner5050 banner5050={component}></Banner5050>}
{component.componentName === Components.Text && <Text text={component}></Text>}
{component.componentName === Components.FullWidthBanner && <FullWidthBanner fullWidthBanner={component}></FullWidthBanner>}
{component.componentName === Components.Header && <Header header={component}></Header>}
{component.componentName === Components.BannerVideo && <BannerVideo bannerVideo={component}></BannerVideo>}
{component.componentName === Components.PageTitle && <PageTitle pageTitle={component}></PageTitle>}
{component.componentName === Components.BannerCards && <BannerCards bannerCards={component}></BannerCards>}
{component.componentName === Components.BannerTiles && <BannerTiles bannerTiles={component}></BannerTiles>}

