---
import type {BannerVideo, Header, PageTitle} from 'src/api/procedures/cms/types';
import {Components} from 'src/api/procedures/cms/types'
import HeaderComponent from 'src/components/HeaderComponent.astro';
import BannerVideoComponent from 'src/components/BannerVideoComponent.astro';
import PageTitleComponent from 'src/components/PageTitleComponent.astro';

interface Props {
    component: (Header|BannerVideo|PageTitle);
}

const {component} = Astro.props;

---

{component.componentName === Components.Header && <HeaderComponent header={component}></HeaderComponent>}
{component.componentName === Components.BannerVideo && <BannerVideoComponent bannerVideo={component}></BannerVideoComponent>}
{component.componentName === Components.PageTitle && <PageTitleComponent pageTitle={component}></PageTitleComponent>}